<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}" type="text/css">
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        {% block header %}  
        <div id="header">
            <h1>Tareas Symfony</h1>
            <ul id="menu">
                {% if app.user %}
                    <li><a href="{{ path('tasks') }}">Inicio</a></li>
                    <li><a href="{{ path('my_tasks') }}">Mis tareas</a></li>
                    <li><a href="{{ path('task_creation') }}">Crear tareas</a></li>
                    <li class="right"><a href="{{ path('logout') }}">Cerra Sesi√≥n</a></li>
                    <li class="right"><a href="">{{ app.user.name ~ ' ' ~ app.user.surname }}</a></li>
                {% else %}
                    <li><a href="{{ path('login') }}">Login</a></li>
                    <li><a href="{{ path('register') }}">Registro</a></li>
                {% endif %}
            </ul>
        </div>    
        <div class="clearfix"></div>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>

